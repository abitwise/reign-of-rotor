    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.3.3",
    "typescript": "~5.5.4",
    "vite": "^5.4.7",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "@babylonjs/core": "^7.29.0",
    "@babylonjs/loaders": "^7.29.0",
    "@dimforge/rapier3d-compat": "^0.19.3"
